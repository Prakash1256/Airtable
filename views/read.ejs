<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 min-h-screen flex flex-col items-center">
    <!-- Navigation Bar -->
    <div class="nav w-full max-w-5xl mb-10 mt-5">
        <a href="/" class="text-white text-lg font-semibold hover:text-gray-400">Back to home</a>
    </div>
    
    <!-- Title -->
    <h1 class="text-center text-white text-3xl font-bold mb-8">All Users</h1>
    
    <!-- Users List -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl">
        <% if (users.length > 0) { %>
            <% users.forEach(function(user) { %>
                <div class="bg-gray-800 text-white rounded-lg overflow-hidden shadow-lg transform hover:scale-105 transition-transform duration-200">
                    <!-- User Image -->
                    <img src="<%= user.image %>" alt="Profile image of <%= user.name %>" class="w-full h-48 object-cover" />
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2"><%= user.name %></h3>
                        <p class="text-sm text-gray-400 mb-4"><%= user.email %></p>
                        <div class="flex justify-between">
                            <a class="text-blue-500 hover:underline" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-500 hover:underline" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-white text-center col-span-full text-lg">No user yet</h3>
        <% } %>
    </div>
</body>
</html>
